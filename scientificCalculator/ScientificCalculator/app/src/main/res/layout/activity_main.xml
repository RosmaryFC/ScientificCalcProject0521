<!--TODO: set when button is touched, a darker background color appears.  -->
<LinearLayout
    android:orientation="vertical"
    android:background="#ff361e5d"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

<!-- The first line where you  will be creating your problems-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6">

        <!-- Might be a textview. do not want keyboard. can determine where you want to type-->
        <EditText
            android:id="@+id/input_expression"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff4e2178"
            android:textColor="#fff"
            android:textSize="40dp"
            android:gravity="right"
            android:text=" "/>

        <TextView
            android:id="@+id/input_answer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff4e2178"
            android:textColor="#ff68ff65"
            android:textSize="40dp"
            android:gravity="right"
            android:text=" "
            android:freezesText="true"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

<!-- C / x del-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:id="@+id/clear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="C"
            android:background="#ffe98cff"
            android:textColor="#fff"
            android:textSize="40dp"/>

        <Button
            android:id="@+id/divide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/"
            android:background="#ffab89c6"
            android:textColor="#fff"
            android:textSize="40dp"/>

        <Button
            android:id="@+id/multiply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="*"
            android:background="#ffab89c6"
            android:textColor="#fff"
            android:textSize="40dp"/>

        <Button
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="del"
            android:background="#ffe98cff"
            android:textColor="#fff"
            android:textSize="40dp"/>

    </LinearLayout>

<!--7 8 9 - -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:id="@+id/seven"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:background="#ffe8c3ff"
            android:textColor="#fff"
            android:textSize="40dp"/>

        <Button
            android:id="@+id/eight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:background="#ffe8c3ff"
            android:textColor="#fff"
            android:textSize="40dp"/>

        <Button
            android:id="@+id/nine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:background="#ffe8c3ff"
            android:textColor="#fff"
            android:textSize="40dp"/>

        <Button
            android:id="@+id/subtract"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:background="#ffab89c6"
            android:textColor="#fff"
            android:textSize="40dp"/>

    </LinearLayout>

<!--4 5 6 + -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#ffe8c3ff"
        android:textColor="#fff"
        android:textSize="40dp">

        <Button
            android:id="@+id/four"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:background="#ffe8c3ff"
            android:textColor="#fff"
            android:textSize="40dp"/>

        <Button
            android:id="@+id/five"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:background="#ffe8c3ff"
            android:textColor="#fff"
            android:textSize="40dp"/>

        <Button
            android:id="@+id/six"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:background="#ffe8c3ff"
            android:textColor="#fff"
            android:textSize="40dp"/>

        <Button
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:background="#ffab89c6"
            android:textColor="#fff"
            android:textSize="40dp"/>

    </LinearLayout>

<!--1 2 3 () -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:background="#ffe8c3ff"
            android:textColor="#fff"
            android:textSize="40dp"/>

        <Button
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:background="#ffe8c3ff"
            android:textColor="#fff"
            android:textSize="40dp"/>

        <Button
            android:id="@+id/three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:background="#ffe8c3ff"
            android:textColor="#fff"
            android:textSize="40dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff">

                <Button
                    android:id="@+id/open_parenthesis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="("
                    android:background="#ffab89c6"
                    android:textColor="#fff"
                    android:textSize="40dp"/>

                <Button
                    android:id="@+id/close_parenthesis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=")"
                    android:background="#ffab89c6"
                    android:textColor="#fff"
                    android:textSize="40dp"/>


                </LinearLayout>


    </LinearLayout>
<!--0 . % = -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:id="@+id/zero"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:background="#ffe8c3ff"
            android:textColor="#fff"
            android:textSize="40dp"/>

        <Button
            android:id="@+id/decimal_point"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:background="#ffab89c6"
            android:textColor="#fff"
            android:textSize="40dp"/>

        <Button
            android:id="@+id/percent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="%"
            android:background="#ffab89c6"
            android:textColor="#fff"
            android:textSize="40dp"/>

        <Button
            android:id="@+id/equal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:background="#ffe98cff"
            android:textColor="#fff"
            android:textSize="40dp"/>

    </LinearLayout>

    </LinearLayout>

</LinearLayout>
